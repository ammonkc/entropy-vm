{
  "builders": [
    {
      "type": "vmware-iso",
      "vm_name": "entropy",
      "disk_size": 10140,
      "guest_os_type": "centos-64",
      "headless": "{{ user `headless` }}",
      "http_directory": "http",
      "iso_checksum": "{{ user `iso_checksum` }}",
      "iso_checksum_type": "sha1",
      "iso_urls": [
        "{{ user `iso_path` }}/{{ user `iso_name` }}",
        "{{ user `iso_url` }}"
      ],
      "shutdown_command": "echo 'vagrant'|sudo -S shutdown -P now",
      "ssh_username": "{{ user `ssh_username` }}",
      "ssh_password": "{{ user `ssh_password` }}",
      "ssh_wait_timeout": "10000s",
      "tools_upload_flavor": "linux",
      "boot_command": [
        "<tab> text ks=http://{{ .HTTPIP }}:{{ .HTTPPort}}/ks6.cfg<enter>"
      ],
      "vmx_data": {
        "memsize": "512",
        "numvcpus": "1",
        "cpuid.coresPerSocket": "1"
      }
    },
    {
      "type": "virtualbox-iso",
      "vm_name": "entropy",
      "disk_size": 10140,
      "guest_os_type": "RedHat_64",
      "guest_additions_path": "VBoxGuestAdditions_{{.Version}}.iso",
      "guest_additions_sha256": "{{ user `ga_checksum` }}",
      "guest_additions_url": "file:///Volumes/Burn/VMs/ISOs/virtualbox/{{.Version}}/VBoxGuestAdditions_{{.Version}}.iso",
      "hard_drive_interface": "sata",
      "headless": "{{ user `headless` }}",
      "http_directory": "http",
      "iso_checksum": "{{ user `iso_checksum` }}",
      "iso_checksum_type": "sha1",
      "iso_urls": [
        "{{ user `iso_path` }}/{{ user `iso_name` }}",
        "{{ user `iso_url` }}"
      ],
      "shutdown_command": "echo 'vagrant'|sudo -S shutdown -P now",
      "ssh_username": "{{ user `ssh_username` }}",
      "ssh_password": "{{ user `ssh_password` }}",
      "ssh_wait_timeout": "10000s",
      "virtualbox_version_file": ".vbox_version",
      "boot_command": [
        "<tab> text ks=http://{{ .HTTPIP }}:{{ .HTTPPort}}/ks6.cfg<enter>"
      ],
      "vboxmanage": [
        ["modifyvm", "{{.Name}}", "--memory", "512"],
        ["modifyvm", "{{.Name}}", "--cpus", "1"]
      ]
    },
    {
      "vm_name": "entropy",
      "type": "parallels-iso",
      "http_directory": "http",
      "iso_urls": [
        "{{ user `iso_local` }}",
        "{{ user `iso_url` }}"
      ],
      "iso_checksum": "{{ user `iso_checksum` }}",
      "iso_checksum_type": "sha1",
      "guest_os_type": "centos",
      "parallels_tools_flavor": "lin",
      "ssh_username": "{{ user `ssh_username` }}",
      "ssh_password": "{{ user `ssh_password` }}",
      "ssh_wait_timeout": "10000s",
      "boot_command": [
        "<tab> text ks=http://{{ .HTTPIP }}:{{ .HTTPPort}}/ks6.cfg<enter>"
      ],
      "shutdown_command": "echo 'vagrant'|sudo -S shutdown -P now",
      "disk_size": 10140,
      "prlctl": [
        ["set", "{{.Name}}", "--memsize", "512"],
        ["set", "{{.Name}}", "--cpus", "1"]
      ]
    }
  ],
  "post-processors": [
    {
      "keep_input_artifact": false,
      "output": "box/{{.Provider}}/{{user `box_name`}}-{{user `version`}}.box",
      "type": "vagrant"
    }
  ],
  "provisioners": [
    {
      "environment_vars": [
        "CM={{user `cm`}}",
        "CM_VERSION={{user `cm_version`}}",
        "CLEANUP_PAUSE={{user `cleanup_pause`}}",
        "UPDATE={{user `update`}}",
        "INSTALL_VAGRANT_KEY={{user `install_vagrant_key`}}",
        "SSH_USERNAME={{user `ssh_username`}}",
        "SSH_PASSWORD={{user `ssh_password`}}",
        "http_proxy={{user `http_proxy`}}",
        "https_proxy={{user `https_proxy`}}",
        "ftp_proxy={{user `ftp_proxy`}}",
        "rsync_proxy={{user `rsync_proxy`}}",
        "no_proxy={{user `no_proxy`}}",
        "BOX_VERSION={{user `version`}}"
      ],
      "execute_command": "echo 'vagrant' | {{.Vars}} sudo -E -S bash '{{.Path}}'",
      "scripts": [
        "script/fix-slow-dns.sh",
        "script/sshd.sh",
        "script/update.sh",
        "script/vagrant.sh",
        "script/vmtool.sh",
        "script/cmtool.sh",
        "script/repos.sh",
        "script/utils.sh",
        "script/wkhtmltox.sh",
        "script/server.sh",
        "script/cleanup.sh"
      ],
      "type": "shell"
    }
  ],
  "variables": {
    "version": "2.0.6",
    "box_name": "entropy",
    "cm": "nocm",
    "cm_version": "",
    "cleanup_pause": "",
    "headless": true,
    "iso_url": "http://mirrors.kernel.org/centos/6.6/isos/x86_64/CentOS-6.6-x86_64-minimal.iso",
    "iso_local": "file:///Volumes/Burn/VMs/ISOs/centos/6.6/isos/x86_64/CentOS-6.6-x86_64-minimal.iso",
    "iso_name": "CentOS-6.6-x86_64-minimal.iso",
    "iso_path": "file:///Volumes/Burn/VMs/ISOs/centos/6.6/isos/x86_64",
    "iso_checksum": "4ed6c56d365bd3ab12cd88b8a480f4a62e7c66d2",
    "ga_checksum": "9f52e186d6c9407b2676d4b2ed1cdf96940ec129cc2bd92e54b24526271a9733",
    "update": "true",
    "ssh_username": "vagrant",
    "ssh_password": "vagrant",
    "install_vagrant_key": true,
    "http_proxy": "{{env `http_proxy`}}",
    "https_proxy": "{{env `https_proxy`}}",
    "ftp_proxy": "{{env `ftp_proxy`}}",
    "rsync_proxy": "{{env `rsync_proxy`}}",
    "no_proxy": "{{env `no_proxy`}}"
  }
}
