{
  "builders": [
    {
      "boot_command": [
        "<tab> text ks=http://{{ .HTTPIP }}:{{ .HTTPPort }}/{{user `ks_path`}}<enter><wait>"
      ],
      "disk_size": 65536,
      "guest_os_type": "centos-64",
      "headless": "{{ user `headless` }}",
      "http_directory": "http",
      "iso_checksum": "{{ user `iso_checksum` }}",
      "iso_checksum_type": "{{user `iso_checksum_type`}}",
      "iso_urls": [
        "{{ user `local` }}/{{ user `local_directory` }}/{{ user `iso_name` }}",
        "{{ user `mirror` }}/{{ user `mirror_directory` }}/{{ user `iso_name` }}"
      ],
      "shutdown_command": "echo 'vagrant'|sudo -S shutdown -P now",
      "ssh_username": "{{ user `ssh_username` }}",
      "ssh_password": "{{ user `ssh_password` }}",
      "ssh_wait_timeout": "10000s",
      "type": "vmware-iso",
      "vm_name": "entropy",
      "tools_upload_flavor": "linux",
      "vmx_data": {
        "cpuid.coresPerSocket": "1",
        "memsize": "512",
        "numvcpus": "1"
      }
    },
    {
      "boot_command": [
        "<tab> text ks=http://{{ .HTTPIP }}:{{ .HTTPPort }}/{{user `ks_path`}}<enter><wait>"
      ],
      "disk_size": 65536,
      "guest_additions_path": "VBoxGuestAdditions_{{.Version}}.iso",
      "guest_additions_sha256": "{{ user `ga_checksum` }}",
      "guest_additions_url": "file:///Volumes/Burn/VMs/ISOs/virtualbox/{{.Version}}/VBoxGuestAdditions_{{.Version}}.iso",
      "guest_os_type": "RedHat_64",
      "hard_drive_interface": "sata",
      "headless": "{{ user `headless` }}",
      "http_directory": "http",
      "iso_checksum": "{{ user `iso_checksum` }}",
      "iso_checksum_type": "{{user `iso_checksum_type`}}",
      "iso_urls": [
        "{{ user `local` }}/{{ user `local_directory` }}/{{ user `iso_name` }}",
        "{{ user `mirror` }}/{{ user `mirror_directory` }}/{{ user `iso_name` }}"
      ],
      "shutdown_command": "echo 'vagrant'|sudo -S shutdown -P now",
      "ssh_username": "{{ user `ssh_username` }}",
      "ssh_password": "{{ user `ssh_password` }}",
      "ssh_wait_timeout": "10000s",
      "type": "virtualbox-iso",
      "vboxmanage": [
        ["modifyvm", "{{.Name}}", "--memory", "512"],
        ["modifyvm", "{{.Name}}", "--cpus", "1"]
      ],
      "virtualbox_version_file": ".vbox_version",
      "vm_name": "entropy"
    },
    {
      "boot_command": [
        "<tab> text ks=http://{{ .HTTPIP }}:{{ .HTTPPort }}/{{user `ks_path`}}<enter><wait>"
      ],
      "disk_size": 65536,
      "guest_os_type": "centos",
      "http_directory": "http",
      "iso_checksum": "{{ user `iso_checksum` }}",
      "iso_checksum_type": "{{user `iso_checksum_type`}}",
      "iso_urls": [
        "{{ user `local` }}/{{ user `local_directory` }}/{{ user `iso_name` }}",
        "{{ user `mirror` }}/{{ user `mirror_directory` }}/{{ user `iso_name` }}"
      ],
      "parallels_tools_flavor": "lin",
      "prlctl": [
        ["set", "{{.Name}}", "--memsize", "512"],
        ["set", "{{.Name}}", "--cpus", "1"]
      ],
      "shutdown_command": "echo 'vagrant'|sudo -S shutdown -P now",
      "ssh_username": "{{ user `ssh_username` }}",
      "ssh_password": "{{ user `ssh_password` }}",
      "ssh_wait_timeout": "10000s",
      "type": "parallels-iso",
      "vm_name": "entropy"
    }
  ],
  "post-processors": [
    {
      "keep_input_artifact": false,
      "output": "box/{{.Provider}}/{{user `box_name`}}-{{user `version`}}.box",
      "type": "vagrant"
    }
  ],
  "provisioners": [
    {
      "destination": "/tmp/entropy-metadata.json",
      "source": "{{user `metadata`}}",
      "type": "file"
    },
    {
      "environment_vars": [
        "CM={{user `cm`}}",
        "CM_VERSION={{user `cm_version`}}",
        "CLEANUP_PAUSE={{user `cleanup_pause`}}",
        "UPDATE={{user `update`}}",
        "INSTALL_VAGRANT_KEY={{user `install_vagrant_key`}}",
        "SSH_USERNAME={{user `ssh_username`}}",
        "SSH_PASSWORD={{user `ssh_password`}}",
        "http_proxy={{user `http_proxy`}}",
        "https_proxy={{user `https_proxy`}}",
        "ftp_proxy={{user `ftp_proxy`}}",
        "rsync_proxy={{user `rsync_proxy`}}",
        "no_proxy={{user `no_proxy`}}",
        "BOX_VERSION={{user `version`}}",
        "BOX_NAME={{user `box_name`}}",
        "PHP_VERSION={{user `php_version`}}"
      ],
      "execute_command": "echo 'vagrant' | {{.Vars}} sudo -E -S bash '{{.Path}}'",
      "scripts": [
        "scripts/common/metadata.sh",
        "scripts/common/sshd.sh",
        "scripts/centos/networking.sh",
        "scripts/entropy/update.sh",
        "scripts/common/vagrant.sh",
        "scripts/entropy/entropy.sh",
        "scripts/common/vmtools.sh",
        "scripts/entropy/repos.sh",
        "scripts/entropy/utils.sh",
        "scripts/entropy/wkhtmltox.sh",
        "scripts/entropy/server.sh",
        "scripts/centos/cleanup.sh",
        "scripts/common/minimize.sh"
      ],
      "type": "shell"
    }
  ],
  "variables": {
    "box_name": "entropy",
    "cleanup_pause": "",
    "cm": "nocm",
    "cm_version": "",
    "ftp_proxy": "{{env `ftp_proxy`}}",
